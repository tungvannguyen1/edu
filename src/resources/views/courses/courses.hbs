<section class="section db p120">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="tagline-message page-title text-center">
                    <h3>All Courses</h3>
                    <ul class="breadcrumb">
                        <li><a href="javascript:void(0)">Edulogy</a></li>
                        <li class="active">Courses</li>
                    </ul>
                </div>
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end section -->
<section class="section gb nopadtop">
    <div class="container">
        <div class="boxed boxedp4">
            <div class="row blog-grid">

                {{!-- start courses card --}}
                {{#each courses}}

                <div class="col-md-4">
                    <div class="course-box">
                        <div class="image-wrap entry">
                            <img src="{{this.image}}" alt="" class="img-responsive">
                            <div class="magnifier">
                                <a href="courses/{{this.tag}}/{{this.slug}}" title=""><i class="">Bắt đầu</i></a>
                            </div>
                        </div><!-- end image-wrap -->
                        <div class="course-details">
                            <h4>
                                <a href="courses/{{this.tag}}/{{this.slug}}" title="">{{this.name}}</a>
                            </h4>
                            <p>{{this.description}}</p>
                        </div><!-- end details -->
                        <div class="course-footer clearfix">
                            <button type="button" class="btn btn-info">Xem khóa học</button>

                        </div><!-- end footer -->
                    </div><!-- end box -->
                </div><!-- end col -->

                {{/each}}


